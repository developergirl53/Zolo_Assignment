<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/themebackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20B2AA"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/log_register"
        android:layout_width="500dp"
        android:layout_height="30dp"
        android:text="LOG IN"
        android:textSize="15sp"
        android:paddingLeft="250dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:foregroundGravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/register"
        android:layout_below="@+id/log_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="REGISTER"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/please"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Please register with Zolo to continue"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_below="@+id/log_register"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/phone_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/stat_sys_phone_call"
        tools:ignore="ContentDescription"
        android:layout_alignTop="@+id/number"
        android:layout_alignLeft="@+id/email_image"
        android:layout_alignStart="@+id/email_image"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="PHONE NUMBER"
        android:inputType="number"
        android:maxLength="10"
        android:paddingLeft="8dp"
        android:textColor="#fff"
        android:textColorHint="#ffd133"
        android:textSize="16sp"
        android:backgroundTint="@android:color/white"
        android:textCursorDrawable="@drawable/cursor_white"
        tools:ignore="HardCodedText"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/please"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/email_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_dialog_email"
        tools:ignore="ContentDescription"
        android:layout_alignBottom="@+id/email"
        android:layout_toLeftOf="@+id/please"
        android:layout_toStartOf="@+id/please"
        android:layout_marginBottom="9dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="YOUR EMAIL ID"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        android:maxLength="10"
        android:paddingLeft="8dp"
        android:textColor="#fff"
        android:textColorHint="#ffd133"
        android:textSize="16sp"
        android:backgroundTint="@android:color/white"
        android:textCursorDrawable="@drawable/cursor_white"
        tools:ignore="HardCodedText"
        android:layout_below="@+id/number"
        android:layout_alignLeft="@+id/number"
        android:layout_alignStart="@+id/number"
        android:layout_alignRight="@+id/number"
        android:layout_alignEnd="@+id/number" />

    <ImageView
        android:id="@+id/name_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_menu_edit"
        tools:ignore="ContentDescription"
        android:layout_marginBottom="7dp"
        android:layout_alignBottom="@+id/name"
        android:layout_alignLeft="@+id/email_image"
        android:layout_alignStart="@+id/email_image" />

    <EditText
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="YOUR NAME"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:maxLength="10"
        android:paddingLeft="8dp"
        android:textColor="#fff"
        android:textColorHint="#ffd133"
        android:textSize="16sp"
        android:backgroundTint="@android:color/white"
        android:textCursorDrawable="@drawable/cursor_white"
        tools:ignore="HardCodedText"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/email" />

    <ImageView
        android:id="@+id/pswd"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_lock_idle_lock"
        tools:ignore="ContentDescription"
        android:layout_marginBottom="7dp"
        android:layout_alignBottom="@+id/set_password"
        android:layout_alignLeft="@+id/name_image"
        android:layout_alignStart="@+id/name_image" />

    <EditText
        android:id="@+id/set_password"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="SET PASSWORD"
        android:layout_marginTop="10dp"
        android:inputType="numberPassword"
        android:maxLength="10"
        android:paddingLeft="8dp"
        android:textColor="#fff"
        android:textColorHint="#ffd133"
        android:textSize="16sp"
        android:backgroundTint="@android:color/white"
        android:textCursorDrawable="@drawable/cursor_white"
        tools:ignore="HardCodedText"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="73dp"
        android:text="REGISTER"
        android:textColor="#000"
        android:background="#ffd133"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>







